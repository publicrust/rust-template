# Apply rules only to C# files
[*.cs]

# -- Disable some unwanted/conflicting rules --
dotnet_diagnostic.IDE0055.severity = none  ; # Disable whitespace auto-fixing (avoid conflicts with CSharpier)
dotnet_diagnostic.IDE1006.severity = none  ; # Disable strict naming rules (if they cause issues)

dotnet_diagnostic.IDE0051.severity = none
dotnet_diagnostic.S1144.severity = none
dotnet_diagnostic.S1172.severity = none
dotnet_diagnostic.IDE0060.severity = none
dotnet_diagnostic.IDE0130.severity = none
dotnet_diagnostic.ca1823.severity = none
dotnet_diagnostic.ca1801.severity = none
dotnet_diagnostic.ca1822.severity = none
dotnet_diagnostic.RCS1213.severity = none
dotnet_diagnostic.RCS1163.severity = none
dotnet_diagnostic.CS8604.severity = none  ; # Disable possible null reference argument warnings

# Suppress CS0649 (field is never assigned to)
dotnet_diagnostic.CS0649.severity = none

# Attempt to suppress RUST000042 (custom error, may not work via .editorconfig)
dotnet_diagnostic.RUST000042.severity = none

# -- (Optional) If you want other style warnings to be visible:
dotnet_analyzer_diagnostic.severity = warning

# -- Line-wrapping and brace rules for dotnet format (ignored by CSharpier) --

# Split long method calls into multiple lines
csharp_wrap_method_invocation_arguments = true
csharp_wrap_preserve_single_line = false
csharp_wrap_chained_expression = true

# Force new lines before '{'
csharp_new_line_before_open_brace = all
csharp_new_line_before_members_in_object_initializers = true
csharp_new_line_before_members_in_anonymous_types = true

# Require braces in if/else/while/for
csharp_prefer_braces = true:error

# Force method arguments to be split onto new lines
csharp_new_line_before_comma = true

dotnet_diagnostic.CA1034.severity = none

dotnet_diagnostic.S2325.severity = none
dotnet_diagnostic.RCS1221.severity = none

dotnet_diagnostic.CA1001.severity = none

dotnet_diagnostic.IDE0045.severity = none

dotnet_diagnostic.ide0046.severity = none
dotnet_diagnostic.s1075.severity = none

dotnet_diagnostic.ide0011.severity = none
dotnet_diagnostic.ide0058.severity = none
dotnet_diagnostic.CA1507.severity = none
dotnet_diagnostic.ide0008.severity = none
dotnet_diagnostic.S2696.severity = none
dotnet_diagnostic.ide0090.severity = none
dotnet_diagnostic.ide0022.severity = none

dotnet_diagnostic.RUST006.severity = none
